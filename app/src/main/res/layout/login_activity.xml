<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_LAY_relativwrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"

    >


    <LinearLayout
        android:id="@+id/login_LAY_linearltop"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/img_backgroundpaws"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_TXT_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Dogcare"
            android:textColor="@android:color/white"
            android:textSize="45dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_LAY_linearcenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"></LinearLayout>

        <LinearLayout
            android:id="@+id/login_LAY_linearlbelow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="example 0501234567"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:inputType="phone"
                    app:errorEnabled="true"/>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/login_BTN_loginregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorsecondary"
                android:text="Login / Register"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/login_TXT_nospam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Don't worry, we will not send any spam"></TextView>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>






